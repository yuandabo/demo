@import '../../styles/iconfont.wxss';
.cart {
  height: 90rpx;
  display: flex;
  width: 100vw;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
  font-size: 28rpx;
}

.cart .cart-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.cart .cart-item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.cart .addcart {
  flex: 2;
  background-color: orange;
  color: #fff;
}

.cart .buy {
  flex: 2;
  background-color: #eb4450;
  color: #fff;
}
