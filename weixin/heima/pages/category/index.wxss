.category {
  height: 100vh;
}

.category .cate_container {
  display: flex;
  height: calc(100% - 90rpx);
}

.category .cate_container .cateleft {
  flex: 2;
}

.category .cate_container .cateleft .cateItem {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.category .cate_container .cateleft .active {
  color: var(--themeColor);
  border-left: 5rpx solid var(--themeColor);
}

.category .cate_container .cateright {
  flex: 5;
}

.category .cate_container .cateright .cateright_title {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category .cate_container .cateright .cateright_title .delimiter {
  padding: 0 10rpx;
  color: #ccc;
}

.category .cate_container .cateright .cateright_title .title {
  padding: 0 10rpx;
  font-size: 30rpx;
}

.category .cate_container .cateright .cateright_body {
  display: flex;
  flex-wrap: wrap;
}

.category .cate_container .cateright .cateright_body .catebodyItem {
  width: 33.33%;
  text-align: center;
}

.category .cate_container .cateright .cateright_body .catebodyItem navigator image {
  width: 50%;
}

.category .cate_container .cateright .cateright_body .catebodyItem navigator view {
  font-size: 30rpx;
}
