.good_list .list_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}

.good_list .list_item .item_left {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.good_list .list_item .item_left image {
  width: 70%;
}

.good_list .list_item .item_right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.good_list .list_item .item_right .title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
}

.good_list .list_item .item_right .price {
  color: var(--themeColor);
  font-size: 32rpx;
}
